    "type-check": "tsc --noEmit",
    "postinstall": "husky"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/circlefin/stablecoin-aptos#readme",
  "devDependencies": {
    "@aptos-labs/ts-sdk": "1.29.1",
    "@types/mocha": "10.0.6",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.17.0",
    "commander": "12.1.0",
    "dotenv": "16.4.5",
    "eslint": "9.13.0",
    "husky": "9.1.6",
    "mocha": "10.7.3",
    "prettier": "3.3.3",
    "prettier-eslint": "16.3.0",
    "sinon": "19.0.2",
    "ts-node": "10.9.2",
    "typescript": "5.6.3",
    "yup": "1.4.0"
  },
  "engines": {
    "node": "20.14.0",
    "yarn": "1.x.x"
  }
